{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <iframe src='https://my.spline.design/lightingtoruscopy-899a1bfe138c64100deff9406260fbf4/' frameborder='0' width='100%' height='100%'></iframe>
    <div class="form login">
        <div>
            <h1>Bienvenue sur la plateforme de streaming collaborative de l'école des Gobelins<br></h1>
                <h2> Partagez avec vos camarades vos plus beaux projets</h2>
               <h2> Inscrivez-vous puis <a href="{{ path('app_login') }}">
                    connectez-vous</a> à votre compte.</h2>

            <p>Renseignez votre email et votre mot de passe.</p>

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_end(registrationForm) }}

            <div>
                <p>Déjà un compte ?</p>
                <a href="{{ path('app_login') }}">
                    Se connecter
                </a>
            </div>
        </div>
    </div>
    <div class="iframeFooter"></div>
{% endblock %}

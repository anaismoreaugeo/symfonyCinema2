<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ importmap() }}
        {% endblock %}
    </head>
    <body>
        <div class="header">
            {% if app.user %}
                {% if app.request.pathinfo != path('app_quizz_code_doing') %}
                    <a  class="fixed" href="{{ path('home') }}">Home</a>
                {% endif %}
                {% if app.request.pathinfo != path('app_quizz_participate') %}
                    <a class="fixed" href="{{ path('app_quizz_participate') }}">Liste des films </a>
                    <a class="fixed" href="{{ path('app_logout') }}">Se déconnecter</a>
                {% endif %}

            {% endif %}

        </div>

        {% block body %}{% endblock %}
    </body>
</html>
